{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block monTitre %}
    Login 
{% endblock %}
{% block body %}
{% if error %}
<div class="alert alert-danger">
<!--     La combinaison login/password est incorrecte -->
    {{error.messageKey | trans(error.messagedata, 'security')}}
</div>
{% endif %}
<form action="{{path('connexion')}}" method="post">
    <div class="form-group">
        <label>Login : </label>
        <input type="text" required name="_username" class="form-control">
    </div>
    <div class="form-group">
        <label>Password : </label>
        <input type="password" required name="_password" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="S'identifier">
</form>

{% endblock %}
