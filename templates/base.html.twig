<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Nu Miss Mat√©{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="https://bootswatch.com/4/litera/bootstrap.min.css">
            <link rel="stylesheet" href="{{asset('css/main.css')}}">
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="{{path("timbres")}}">Ma collection</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarColor02">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Timbres
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="{{path("timbres")}}">Timbres</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <a class="dropdown-item" href="{{path("admin_timbres")}}">Administration</a>
                      </li>
                      {% endif %}
                  </ul>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Pays
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="{{path("pays")}}">Pays</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <a class="dropdown-item" href="{{path("admin_pays")}}">Administration</a>
                      </li>
                    {% endif %}
                  </ul>
                </li>

                {% if not app.user %}
                    <li class="nav-item">
                      <a class="nav-link" href="{{path('inscription')}}">Inscription</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="{{path('connexion')}}">Login</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                      <a class="nav-link" href="{{path('deconnexion')}}">Logout</a>
                    </li>
                {% endif %}
              </ul>
            </div>
        </nav>

        <h1 class="border border-primary rounded p-2 m-2 text-white bg-info">{% block monTitre %}{% endblock %}</h1>
        {% block body %}{% endblock %}
    </body>
</html>
