{% extends 'base.html.twig' %}

{% block title %}Nu Miss Maté{% endblock %}

{% block monTitre %}
    Liste de tous les timbres
{% endblock %}

{% block body %}

<div class="row">
    {% for timbre in timbres %}
        <div class="col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card border-primary mb-3 mx-auto" style="max-width:20rem">
                <div class="card-header text-center">
                    <img src="{{asset('images/' ~ timbre.image)}}" class="perso_imgTimbre card-img-top">
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{timbre.nom}}</h3>
                    <p class="card-text">
                        <h4 class="text-center">Année : {{timbre.annee}}</h4>       
                        <table class="table text-center">
                            <tr class="table-light">
                                <th scope="row">Valeur</th>
                                <td>{{timbre.valeur}}</td>
                            </tr>
                        </table>                    
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>  

{% endblock %}
